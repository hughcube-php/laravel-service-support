{
    "name": "hughcube/laravel-service-support",
    "description": "",
    "license": "MIT",
    "authors": [
        {
            "name": "hugh.li",
            "email": "hugh.li@foxmail.com"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "laravel/framework": "*",
        "laravel/lumen-framework": "*",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "*",
        "orchestra/testbench": "*"
    },
    "autoload": {
        "psr-4": {
            "HughCube\\Laravel\\ServiceSupport\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HughCube\\Laravel\\ServiceSupport\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --verbose --coverage-clover=coverage.clover",
        "phpstan": "phpstan analyse -vvv",
        "check-style": "phpcs -p --standard=PSR2 src/ -v",
        "fix-style": "phpcbf -p --standard=PSR2 src/ -v"
    },
    "config": {
        "allow-plugins": {
            "*": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
